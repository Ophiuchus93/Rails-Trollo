<hr />
<h3 class="ui teal header"><%= @list.descript %></h3>
<hr />
<h3><% @list.tasks.each do |task| %></h3>
  <%= render 'tasks/task', {task: task} %>
  <% end %>
  <hr / >
<%= link_to "Add Task", new_list_task_path(@list), class: "ui teal button inverted" %>
<%= link_to "Edit Description", edit_board_list_path(@board, @list), class: "ui pink button inverted" %>
